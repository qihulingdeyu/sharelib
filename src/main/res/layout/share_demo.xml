<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="分享Demo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <RadioButton
                android:id="@+id/pt_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ"/>
            <RadioButton
                android:id="@+id/pt_qzone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QZone"/>
            <RadioButton
                android:id="@+id/pt_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"/>
            <RadioButton
                android:id="@+id/pt_weixin_pyq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朋友圈"/>
            <RadioButton
                android:id="@+id/pt_sina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新浪"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文本"/>
            <CheckBox
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片"/>
            <CheckBox
                android:id="@+id/webpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网页"/>
            <CheckBox
                android:id="@+id/music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音乐"/>
            <CheckBox
                android:id="@+id/video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频"/>
            <CheckBox
                android:id="@+id/voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="声音"/>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:minLines="5"
        android:hint="输入文本"/>

    <Button
        android:id="@+id/clear_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清空"/>

    <Button
        android:id="@+id/send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送单条消息"/>

    <Button
        android:id="@+id/send_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送多条消息"/>

    <Button
        android:id="@+id/other_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="其它"/>

</LinearLayout>
